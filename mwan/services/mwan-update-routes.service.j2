[Unit]
Description=Rebuild MWAN policy routing tables at boot
After=network-online.target systemd-networkd.service networkd-dispatcher.service
Wants=network-online.target

[Service]
Type=oneshot
ExecStartPre=/usr/local/bin/mwan-wait-routes-prereqs.sh
ExecStart=/usr/local/bin/update-routes.sh
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

# Monkeybrains WAN Interface (virtio, fallback)
# Generated by Ansible

[Match]
Name={{ mwan_monkeybrains_iface }}

[Network]
# Monkeybrains is a tertiary “all-else-failed” WAN. Use DHCP and accept RA if provided.
DHCP=yes
IPv6AcceptRA=yes

# Needed for policy routing / forwarding
IPv4Forwarding=yes
IPv6Forwarding=yes

[DHCPv4]
# Prefer primary WAN routes when multiple exist
RouteMetric=50

[DHCPv6]
# Request prefix delegation so MWAN can NPT the internal /60 onto Monkeybrains when needed.
UseDelegatedPrefix=yes
PrefixDelegationHint=::/56

[IPv6PrefixDelegation]
RouterLifetimeSec=1800

[IPv6AcceptRA]
RouteMetric=50

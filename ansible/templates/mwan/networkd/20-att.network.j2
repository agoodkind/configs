# AT&T WAN Interface (Parent for VLAN)
# Generated by Ansible
# This interface is only used for 802.1X authentication
# The VLAN interface (enatt0.3242) is declared here for systemd-networkd

[Match]
Name={{ mwan_att_iface }}

[Network]
# Declare VLAN interface - systemd-networkd will create it
# The VLAN is configured in 21-att-vlan.network
VLAN={{ mwan_att_iface }}.{{ mwan_att_vlan_id }}
# Static IP for SFP module access (192.168.1.1)
Address=192.168.1.2/24
# Parent interface is primarily used for 802.1X authentication via wpa_supplicant
# Disable IPv6 activity on parent; all WAN v6 is on the VLAN
LinkLocalAddressing=no
IPv6AcceptRA=no

[Route]
# Route to SFP module management interface
Destination=192.168.1.1/32
Scope=link


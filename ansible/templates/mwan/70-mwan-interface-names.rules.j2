# Persistent network interface naming for MWAN
# Generated by Ansible - do not edit manually

# eth0: Management (virtio on vmbr0)
SUBSYSTEM=="net", ACTION=="add", \
ATTR{address}=="{{ mwan_net0_mac }}", NAME="eth0"

# eth1: AT&T WAN (X710 VF passthrough - iavf driver)
SUBSYSTEM=="net", ACTION=="add", \
DRIVERS=="iavf", NAME="eth1"

# eth2: Webpass WAN (I226-V passthrough - igc driver)
# Note: Driver match only - MAC will be spoofed via /etc/network/interfaces
SUBSYSTEM=="net", ACTION=="add", \
DRIVERS=="igc", NAME="eth2"

# eth3: Internal link to OPNsense (virtio on mwanbr)
SUBSYSTEM=="net", ACTION=="add", \
ATTR{address}=="{{ mwan_net1_mac }}", NAME="eth3"

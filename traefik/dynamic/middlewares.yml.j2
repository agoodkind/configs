# Traefik Middlewares
# Managed by Git - configs repo

http:
  middlewares:
    # Security Headers
    secure-headers:
      headers:
        sslRedirect: true
        browserXssFilter: true
        contentTypeNosniff: true
        forceSTSHeader: true
        stsSeconds: 31536000
        stsIncludeSubdomains: true
        stsPreload: true
        customFrameOptionsValue: "SAMEORIGIN"
        customResponseHeaders:
          X-Robots-Tag: "none,noarchive,nosnippet,notranslate,noimageindex"
          Server: ""

{% if traefik_dashboard_enabled | default(false) %}
    # Dashboard Authentication
    # Uses external auth file for better security
    # File is generated from TRAEFIK_DASHBOARD_USER and TRAEFIK_DASHBOARD_PASS env vars
    # Generate with: htpasswd -nb $TRAEFIK_DASHBOARD_USER $TRAEFIK_DASHBOARD_PASS > /etc/traefik/auth/dashboard-users
    dashboard-auth:
      basicAuth:
        usersFile: "/etc/traefik/auth/dashboard-users"
{% endif %}

    # IP Whitelist for Internal Services Only
    # Use this for services that should only be accessible from your internal network
    internal-only:
      ipAllowList:
        sourceRange:
          - "127.0.0.1/32"
          - "10.0.0.0/8"
          - "::1/128"                    # IPv6 localhost
          - "3d06:bad:b01::/56"          # IPv6 private network

    # Cloudflare IP Whitelist - Only allow Cloudflare proxied traffic
    # This ensures all public traffic comes through Cloudflare
    # Updated automatically from: https://www.cloudflare.com/ips/
    cloudflare-only:
      ipAllowList:
        sourceRange:
{% for cidr in cloudflare_ipv4_ranges %}
          - "{{ cidr }}"
{% endfor %}
{% for cidr in cloudflare_ipv6_ranges %}
          - "{{ cidr }}"
{% endfor %}

    # Combined: Cloudflare + Internal IPs
    # Allows traffic from Cloudflare (public) OR internal network (direct access)
    cloudflare-or-internal:
      ipAllowList:
        sourceRange:
          - "127.0.0.1/32"
          - "10.0.0.0/8"
          - "::1/128"                    # IPv6 localhost
          - "3d06:bad:b01::/56"          # IPv6 private network
{% for cidr in cloudflare_ipv4_ranges %}
          - "{{ cidr }}"
{% endfor %}
{% for cidr in cloudflare_ipv6_ranges %}
          - "{{ cidr }}"
{% endfor %}

    # Rate Limiting
    rate-limit:
      rateLimit:
        average: 100
        burst: 50
        period: 1s

    # Compression
    compress:
      compress: {}


    # WebSocket-friendly headers (less restrictive for WebSocket connections)
    websocket-headers:
      headers:
        browserXssFilter: true
        contentTypeNosniff: true
        customFrameOptionsValue: "SAMEORIGIN"
        customResponseHeaders:
          X-Robots-Tag: "none,noarchive,nosnippet,notranslate,noimageindex"
          Server: ""

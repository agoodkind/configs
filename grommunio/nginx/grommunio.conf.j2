# Nginx configuration for Grommunio (behind Traefik)
# Generated by Ansible
#
# Listens on port 80 only (HTTP)
# HTTPS termination handled by Cloudflare Tunnel + Traefik
# Critical: X-Forwarded-Proto: https header required for EAS

upstream gromox {
    server [::1]:8080;
}

upstream grommunio_sync {
    server [::1]:8081;
}

upstream grommunio_web {
    server [::1]:8082;
}

upstream grommunio_admin {
    server [::1]:8443;
}

server {
    listen {{ grommunio_nginx_listen }}:{{ grommunio_nginx_port }};
    server_name {{ grommunio_mail_domain }} {{ grommunio_autodiscover_domain }};

    # Logging
    access_log /var/log/nginx/grommunio-access.log;
    error_log /var/log/nginx/grommunio-error.log;

    # Client body size (for attachments)
    client_max_body_size 100M;

    # WebSocket support for grommunio-chat
    map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
    }

    # Main location - proxy to gromox
    location / {
        proxy_pass http://gromox;
        proxy_http_version 1.1;

        # Critical: Trust X-Forwarded-Proto from Traefik (required for EAS)
        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;

        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # Timeouts for WebSocket (long-lived connections)
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
        proxy_connect_timeout 60s;

        # Disable buffering for WebSocket
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # ActiveSync endpoint (EAS)
    location /Microsoft-Server-ActiveSync {
        proxy_pass http://grommunio_sync;
        proxy_http_version 1.1;

        # Critical: Trust X-Forwarded-Proto from Traefik (required for EAS)
        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;

        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # Timeouts for EAS push connections
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;

        # Disable buffering
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Web interface
    location /web {
        proxy_pass http://grommunio_web;
        proxy_http_version 1.1;

        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # Admin API
    location /admin {
        proxy_pass http://grommunio_admin;
        proxy_http_version 1.1;

        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;

        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # Autodiscover endpoint
    location /.well-known/autodiscover/autodiscover.xml {
        proxy_pass http://gromox;
        proxy_http_version 1.1;

        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
    }
}

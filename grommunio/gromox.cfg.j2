# Gromox Main Configuration
# Generated by Ansible

# Database connection
mysql_host = localhost
mysql_port = 3306
mysql_user = {{ grommunio_db_user }}
mysql_password = {{ vault_grommunio_db_password }}
mysql_database = {{ grommunio_db_name }}

# Service ports
http_listen = ::1:8080
https_listen =

# Logging
log_file = {{ grommunio_log_dir }}/gromox.log
log_level = 4

# Data directory
data_path = {{ grommunio_data_dir }}
